/* pages/appointment/appointment.wxss */
.container {
  padding: 24rpx;
  padding-bottom: 180rpx;
}

/* 礼品卡片 */
.gift-card {
  background: linear-gradient(135deg, #FFF5F0 0%, #FFE8DC 100%);
}

.gift-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.gift-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.gift-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.gift-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.gift-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF6B35;
}

.gift-expire {
  font-size: 24rpx;
  color: #999;
}

.gift-tip {
  font-size: 26rpx;
  color: #666;
}

/* 区块标题 */
.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

/* 日期选择 */
.date-list {
  white-space: nowrap;
  margin: 0 -8rpx;
}

.date-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
  padding: 20rpx 0;
  margin: 0 8rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
}

.date-item.active {
  background: #FF6B35;
}

.date-item.active .date-week,
.date-item.active .date-day {
  color: #fff;
}

.date-week {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.date-day {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 时间选择 */
.time-grid {
  display: flex;
  flex-wrap: wrap;
  margin: -8rpx;
}

.time-item {
  width: calc(33.33% - 16rpx);
  margin: 8rpx;
  padding: 24rpx 0;
  text-align: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.time-item.active {
  background: #FF6B35;
  color: #fff;
}

.time-item.disabled {
  background: #f0f0f0;
  color: #ccc;
}

/* 表单 */
.form-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  width: 140rpx;
  font-size: 28rpx;
  color: #666;
}

.form-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
}

/* 按钮区域 */
.btn-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  background: #fff;
  box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.05);
}

.btn-submit {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #FF6B35 0%, #FF8F5E 100%);
  color: #fff;
  border-radius: 48rpx;
  font-size: 34rpx;
  font-weight: 500;
  border: none;
}

.btn-submit::after {
  border: none;
}

/* 成功状态 */
.success-card {
  text-align: center;
  padding: 60rpx 32rpx;
}

.success-icon {
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  margin: 0 auto 24rpx;
  background: #52c41a;
  color: #fff;
  font-size: 60rpx;
  border-radius: 50%;
}

.success-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.success-desc {
  font-size: 28rpx;
  color: #666;
}

/* 预约详情 */
.appointment-detail {
  padding: 24rpx 32rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 28rpx;
  color: #666;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.detail-value.code {
  color: #FF6B35;
  font-size: 32rpx;
  font-weight: bold;
}

/* 地址卡片 */
.address-card {
  text-align: center;
}

.address-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.address-text {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 24rpx;
}

.btn-nav {
  display: inline-block;
  padding: 16rpx 48rpx;
  background: #fff;
  border: 2rpx solid #FF6B35;
  color: #FF6B35;
  font-size: 28rpx;
  border-radius: 40rpx;
}

.btn-nav::after {
  border: none;
}

/* 取消按钮 */
.btn-cancel {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  color: #999;
  border: 2rpx solid #ddd;
  border-radius: 44rpx;
  font-size: 30rpx;
}

.btn-cancel::after {
  border: none;
}
