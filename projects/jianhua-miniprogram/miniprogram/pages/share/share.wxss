/* pages/share/share.wxss */
.container {
  padding-bottom: 180rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

/* 未登录提示 */
.login-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.tip-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.tip-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.btn-go-claim {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8F5E 100%);
  color: #fff;
  border-radius: 44rpx;
  padding: 24rpx 80rpx;
  font-size: 32rpx;
  border: none;
}

/* 统计卡片 */
.stats-card {
  margin: 24rpx;
  background: linear-gradient(135deg, #FF6B35 0%, #FF8F5E 100%);
  color: #fff;
}

.stats-header {
  display: flex;
  align-items: baseline;
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 28rpx;
  margin-right: 16rpx;
}

.stats-count {
  font-size: 72rpx;
  font-weight: bold;
}

.stats-unit {
  font-size: 28rpx;
  margin-left: 8rpx;
}

/* 进度条 */
.progress-section {
  margin-bottom: 20rpx;
}

.progress-bar {
  height: 16rpx;
  background: rgba(255,255,255,0.3);
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: #fff;
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  opacity: 0.9;
}

.today-stats {
  font-size: 24rpx;
  opacity: 0.8;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(255,255,255,0.2);
}

/* 礼品进度卡片 */
.gifts-card {
  margin: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-count {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

.gift-progress-list {
  /* 礼品列表 */
}

.gift-progress-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.gift-progress-item:last-child {
  border-bottom: none;
}

.gift-status-icon {
  width: 60rpx;
  font-size: 36rpx;
}

.gift-info {
  flex: 1;
}

.gift-name {
  display: block;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.gift-require {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.gift-action {
  min-width: 120rpx;
  text-align: right;
}

.btn-claim-gift {
  background: #FF6B35;
  color: #fff;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  border: none;
  line-height: 1.5;
}

.btn-claim-gift::after {
  border: none;
}

.status-text {
  font-size: 24rpx;
  color: #52c41a;
}

.status-text.locked {
  color: #999;
}

/* 邀请记录 */
.invitees-card {
  margin: 24rpx;
}

.invitee-list {
  max-height: 500rpx;
  overflow-y: auto;
}

.invitee-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.invitee-item:last-child {
  border-bottom: none;
}

.invitee-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: #f5f5f5;
}

.invitee-info {
  flex: 1;
}

.invitee-name {
  display: block;
  font-size: 28rpx;
  color: #333;
}

.invitee-phone {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.invitee-time {
  font-size: 24rpx;
  color: #999;
}

.empty-list {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 分享按钮区域 */
.share-btn-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  background: #fff;
  box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.05);
}

.btn-share-main {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #FF6B35 0%, #FF8F5E 100%);
  color: #fff;
  border-radius: 48rpx;
  font-size: 34rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.4);
}

.btn-share-main::after {
  border: none;
}
