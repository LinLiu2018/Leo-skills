/* pages/user/user.wxss */
.container {
  padding: 0 0 120rpx;
}

/* 用户头部 */
.user-header {
  display: flex;
  align-items: center;
  padding: 60rpx 32rpx;
  background: linear-gradient(135deg, #FF6B35 0%, #FF8F5E 100%);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255,255,255,0.5);
}

.user-info {
  flex: 1;
  margin-left: 24rpx;
}

.nickname {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.phone {
  display: block;
  font-size: 26rpx;
  color: rgba(255,255,255,0.8);
  margin-top: 8rpx;
}

.invite-code {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255,255,255,0.2);
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
}

.code-label {
  font-size: 22rpx;
  color: rgba(255,255,255,0.8);
}

.code-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  margin-top: 4rpx;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  margin-top: -30rpx;
  position: relative;
  z-index: 10;
}

.stats-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  border-right: 1rpx solid #f0f0f0;
}

.stats-item:last-child {
  border-right: none;
}

.stats-value {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #FF6B35;
}

.stats-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 卡片通用 */
.card {
  background: #fff;
  border-radius: 16rpx;
  margin: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.card-more {
  font-size: 26rpx;
  color: #999;
}

/* 礼品列表 */
.gift-list {
  margin-top: 16rpx;
}

.gift-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.gift-item:last-child {
  border-bottom: none;
}

.gift-info {
  display: flex;
  align-items: center;
}

.gift-name {
  font-size: 28rpx;
  color: #333;
}

.gift-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-left: 16rpx;
}

.gift-status.pending {
  background: #FFF7E6;
  color: #FA8C16;
}

.gift-status.claimed {
  background: #F6FFED;
  color: #52C41A;
}

.gift-expire {
  font-size: 24rpx;
  color: #999;
}

.empty-tip {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 菜单列表 */
.menu-list {
  padding: 0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
}

/* 按钮区域 */
.btn-area {
  padding: 32rpx 24rpx;
}

.btn-login {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #FF6B35 0%, #FF8F5E 100%);
  color: #fff;
  border-radius: 48rpx;
  font-size: 34rpx;
  font-weight: 500;
  border: none;
}

.btn-login::after {
  border: none;
}

.btn-logout {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  color: #999;
  border: 2rpx solid #ddd;
  border-radius: 44rpx;
  font-size: 30rpx;
}

.btn-logout::after {
  border: none;
}
